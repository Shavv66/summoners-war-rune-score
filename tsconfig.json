{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"compilerOptions": {
		"allowJs": true,
		"module": "es2020",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"@app/*": ["src/app/*"],
			"@main-process/*": ["src/main-process/*"]
		}
	},
	"exclude": ["src/server/"]
}
